{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "rootDir": "./src",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "src/*": [
          "./src/*"
        ]
      }
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "**/node_modules/*"]
    }
{
    "name": "backend",
    "version": "1.0.0",
    "description": "API of the SkillUpLevel",
    "main": "dist/app.js",
    "engines": {
        "node": "15.x"
    },
    "scripts": {
        "dev": "cross-env NODE_ENV=dev nodemon ./src/app.ts",
        "devdebug": "cross-env NODE_ENV=test nodemon ./src/app.ts",
        "local": "cross-env NODE_ENV=local nodemon ./src/app.ts",
        "backdev": "cross-env NODE_ENV=backdev nodemon ./src/app.ts",
        "build": "cross-env NODE_ENV=production tsc && npx tsc-alias",
        "test": "cross-env NODE_ENV=test jest --coverage",
        "migrate": "migrate-mongo up",
        "migrate:undo-last": "migrate-mongo down",
        "migrate:status": "migrate-mongo status",
        "migrate:create": "migrate-mongo create",
        "prepare": "cd .. & husky install ./backend/.husky"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ],
        "*.{html,css}": [
            "prettier --write"
        ]
    },
    "license": "MIT",
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.0.3",
        "@types/jsonwebtoken": "^8.5.6",
        "@types/lodash": "^4.14.178",
        "@types/mongoose": "^5.11.97",
        "@types/node": "^16.11.12",
        "@typescript-eslint/eslint-plugin": "^5.7.0",
        "@typescript-eslint/parser": "^5.7.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.4.1",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^16.1.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.1.4",
        "nodemon": "^2.0.15",
        "prettier": "^2.5.1",
        "ts-node": "^10.4.0",
        "tsc-alias": "^1.5.0",
        "typescript": "^4.5.2"
    },
    "dependencies": {
        "@babel/preset-env": "^7.16.5",
        "@babel/preset-typescript": "^7.16.5",
        "@types/nodemailer": "^6.4.4",
        "bcrypt": "^5.0.1",
        "body-parser": "^1.19.1",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "jest": "^27.4.5",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "moment": "^2.29.2",
        "mongoose": "^6.1.2",
        "nodemailer": "^6.7.2",
        "tsconfig-paths": "^3.12.0",
        "winston": "^3.3.3"
    }
}
